    <script>
        // Simple 1-minute countdown logic
        let time = 60;
        const timerElement = document.getElementById('timer');

        setInterval(() => {
            let minutes = Math.floor(time / 60);
            let seconds = time % 60;
            timerElement.innerHTML = `${minutes < 10 ? '0' : ''}${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
            if (time <= 0) {
                time = 60; // Reset for next round
                // In a real app, you'd fetch the result from the server here
            } else {
                time--;
            }
        }, 1000);

        function placeBet(color) {
            alert("You selected " + color + ". In a real app, this would open a betting modal.");
        }
    </script>
